{
  "name": "ass.js",
  "description": "A JavaScript renderer for ASS subtitle format.",
  "version": "1.0.2",
  "main": "dist/ass.js",
  "module": "dist/ass.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "lint": "eslint src test",
    "unit": "karma start",
    "sauce": "karma start karma.sauce.js",
    "test": "npm run lint && npm run unit",
    "bundle": "rollup -c",
    "minify": "uglifyjs dist/ass.js -m -o dist/ass.min.js",
    "build": "npm run bundle && npm run minify",
    "preversion": "npm test",
    "version": "npm run build && git add -A ./dist",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weizhenye/ASS.git"
  },
  "keywords": [
    "ASS",
    "subtitle",
    "renderer"
  ],
  "author": "Zhenye Wei",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weizhenye/ASS/issues"
  },
  "homepage": "https://ass.js.org/",
  "devDependencies": {
    "ass-compiler": "0.0.9",
    "chai": "^4.1.2",
    "csso": "^3.5.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.10.0",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-rollup-preprocessor": "^5.1.1",
    "karma-sauce-launcher": "^1.2.0",
    "mocha": "^5.0.5",
    "rollup": "^0.57.1",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "uglify-js": "^3.3.18"
  }
}
